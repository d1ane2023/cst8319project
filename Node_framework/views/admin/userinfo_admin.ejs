<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>User Programs and Testimonials</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link href="/css/styles.css" rel="stylesheet" />
    <link href="/css/admin.css" rel="stylesheet" />
    <style>
        .back-button {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <div class="page-header">
            <h1 class="display-5 fw-bold"><%= user.username %>'s Enrolled Programs and Testimonials</h1>
        </div>
        <button onclick="history.back()" class="btn btn-secondary back-button"><i class="fas fa-arrow-left"></i> Back</button>
        <div class="table-responsive">
            <h2>Enrolled Programs</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Title</th>
                        <th scope="col">Date</th>
                        <th scope="col">Description</th>
                        <th scope="col">Category</th>
                    </tr>
                </thead>
                <tbody>
                    <% programs.forEach(program => { %>
                        <tr>
                            <td><%= program.title %></td>
                            <td><%= new Date(program.date).toLocaleDateString() %></td>
                            <td><%= program.description %></td>
                            <td><%= program.category %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
        <div class="table-responsive mt-5">
            <h2>User Testimonials</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Text</th>
                        <th scope="col">Date</th>
                        <th scope="col">Approved</th>
                    </tr>
                </thead>
                <tbody>
                    <% testimonials.forEach(testimonial => { %>
                        <tr>
                            <td><%= testimonial.text %></td>
                            <td><%= new Date(testimonial.date).toLocaleDateString() %></td>
                            <td><%= testimonial.isApproved ? 'Yes' : 'No' %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
